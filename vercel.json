{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/server.js"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/client/static/$1"
    },
    {
       "src": "/(.*)\\.png",
       "dest": "/client/$1.png"
     },  
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
    ,
    {
      "src": "/(.*)",
      "dest": "/build/$1",
      "status": 404
    },
    {
      "src": "/(.*)",
      "dest": "/build/index.html"
    }
  ]
}
